<resources>
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="colorControlNormal">@color/trend</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
    <!-- Base application theme. -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/stdOrange</item>
        <item name="colorPrimaryDark">@color/stdOrange</item>
        <item name="colorAccent">@color/stdOrange</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/stdOrange</item>
        <item name="colorPrimaryDark">@color/stdOrange</item>
        <item name="colorAccent">@color/trend</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">#f07557</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
